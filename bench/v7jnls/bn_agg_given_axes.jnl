      DEFINE GRID /X=xax /Y=yax /Z=zax /T=ftax fcstgrid; \
      SET GRID fcstgrid; \
      LET /TITLE="forecasted value" value = _X + _Y + _Z + cos(1.618 * 3.14159 * (_T + `tzero`) / 365.25) * log(12.0 * _T / 365.25); \
