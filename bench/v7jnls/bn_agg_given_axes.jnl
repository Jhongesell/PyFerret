      CANCEL VAR value; \
      SET GRID ABSTRACT; \
      CANCEL GRID fcstgrid; \
      CANCEL AXIS ftax; \
      CANCEL VAR forecasted_times; \
      CANCEL VAR tzero; \
      CANCEL VAR tzero_str; \
   )

